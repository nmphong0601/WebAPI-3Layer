@model DoAnWeb.Models.Order

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Update", "ManageOrder", FormMethod.Post, new { @class = "form-horizontal", id = "frmAdd", enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.OrderID, "Mã đơn hàng:", new { @class = "col-sm-2 control-label" })
                @Html.LabelFor(m => m.OrderID, Model.OrderID.ToString(), new { @class = "control-label" })
            </div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.SttID, "Tình trạng:", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.SttID, (IEnumerable<SelectListItem>)ViewBag.Loai, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-plus"></i>
                        &nbsp; Sửa
                    </button>
                </div>
            </div>
        }
    </div>
</div>

